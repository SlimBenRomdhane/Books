@model Books.Models.BookModel

<div class="card" style="width: 18rem;">
    <!--<img class="card-img-top" src="..." alt="Card image cap">-->
    <div class="card-body bg-light">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">
            @Model.Author<br />
            @Model.NumberOfPages<br />
            @Model.Genre<br />
            <p>Price in local currency</p>@Model.Price<br />            
            <p>Available copies</p>@Model.AvailableCopies
        </p>
        <a href="Book/MoreDetails/@Model.Id" class="btn btn-primary">Tell me more</a>
        <a href="#" class="btn btn-warning">Edit this copy</a>
        <a href="Book/DeletePage/@Model.Id" class="btn btn-danger">Delete this shit</a>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateNewBook">
            Create New
        </button>
    </div>
</div>