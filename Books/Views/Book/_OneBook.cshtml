@model Books.Models.BookModel

<div class="card" style="width: 18rem;">
    <!--<img class="card-img-top" src="..." alt="Card image cap">-->
    <div class="card-body bg-light">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">
            @Model.Author<br />
            @Model.NumberOfPages<br />
            @Model.Genre<br />
            @Model.Price
        </p>
        <a href="Book/MoreDetails/@Model.Id" class="btn btn-primary">Tell me more</a>
        <a href="#" class="btn btn-warning">Edit this copy</a>
        <a href="Book/DeletePage/@Model.Id" class="btn btn-danger">Delete this shit</a>
    </div>
</div>